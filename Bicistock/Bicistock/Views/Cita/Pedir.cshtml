@model Bicistock.Common.Models.CS_ModeloCita;
@using Microsoft.AspNetCore.Http;

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    @{
        ViewData["Title"] = "Pedir Cita";

    }


    <!-- Bootstrap core CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/form-validation.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container" style="margin-top:10%;">
        <main>
            <a href="/bikes/listbikes">

            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
</svg>
            Volver a Lista de Bicicletas</a>

            <div class="py-5 text-center">
                <h2>Pide tu cita</h2>

            </div>
            @if (Context.Session.GetInt32("errorCita") == 1)
            {

                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <div>
                        El Nombre de Usuario No existe
                    </div>
                </div>
            }

            <div>

                <form method="post">
                    <div class="row g-3">
                        <div class="col-sm-5">
                            <label for="firstName" class="form-label">Nombre</label>
                            @Html.TextBoxFor(x => x.CurrentUser, new { @class = "form-control", @disabled ="disabled", @placeholder = Convert.ToString(Context.Session.GetString("usuarioActivo"))})
                        </div>

                        <div class="col-sm-4">
                            <center>
                                <label for="lastName" class="form-label">Marca</label>
                                <br />
                                @Html.DropDownListFor(x => x.Brand.Id, new SelectList(Model.BrandList, "Id", "Name"), "--SELECCIONA MARCA--")
                            </center>
                        </div>

                        <div class="col-sm-2">

                            <div class="form-group">
                                <label for="lastName" class="form-label">Fecha</label>

                                <div class="col-md-12">
                                    @Html.EditorFor(x => x.Date)
                                    @Html.ValidationMessageFor(x => x.Date)
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-12">
                            <label for="lastName" class="form-label">Descripción</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })

                        </div>

                    </div>
                    <button style="margin-top:10%;" class="w-100 btn btn-primary btn-lg" type="submit">Pide tu cita</button>
                </form>
            </div>



        </main>
    </div>


    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
