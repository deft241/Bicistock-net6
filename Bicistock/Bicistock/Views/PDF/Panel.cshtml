@model Bicistock.Common.Models.AdminPanelData;
@using Microsoft.AspNetCore.Http;

@{
    Layout = "../_ViewPDF.cshtml";
}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

<div class="contenedor">
    <table style="width:100%">
        <tr>
            <td>
                <img src="/Images/minLogo.png" style="width:200px;" />
            </td>
            <td style="text-align:right">
                <table style="margin-right:0;margin-left:auto">
                    <tr><td><p class="title2">Usuarios</p></td></tr>
                </table>
            </td>
        </tr>
    </table>
 <table style="width:100%">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            <br />
                            <br />
                            <p class="title">Lista Usuarios</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />

    <table class="tbproductos" style="width:100%">
        <thead>
            <tr>
                <th class="tbth">Nombre de Usuario</th>
                <th class="tbth" style="width:130px">DNI</th>
                <th class="tbth" style="width:130px">Teléfono</th>
                <th class="tbth" style="width:130px">Verificado</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.UserList)
                {
                    <tr>
                        <td class="td-item">
                            <p class="item">
                                @{
                                    if(item.Role == 2)
                                    {
                                        <i class="bi bi-star-fill"></i> @Html.DisplayFor(modelItem => item.UserName)
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    }
                                }
                                
                            </p>
                        </td>
                       <td class="td-item">
                            <p class="item">
                                @Html.DisplayFor(modelItem => item.Dni)
                            </p>
                        </td>
                        <td class="td-item">
                            <p class="item">
                                @Html.DisplayFor(modelItem => item.Phone)
                            </p>
                        </td>
                        <td class="td-item">
                            <p class="item">
                                @Html.DisplayFor(modelItem => item.Verified)
                            </p>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
    </div>
