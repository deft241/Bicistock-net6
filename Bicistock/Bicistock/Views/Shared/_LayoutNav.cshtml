@using Microsoft.AspNetCore.Http;
@{
    string usuarioActivo;
    if (string.IsNullOrEmpty(Context.Session.GetString("usuarioActivo")))
    {
        usuarioActivo = "Inicia Sesión";

    }
    else
    {
        usuarioActivo = Convert.ToString(Context.Session.GetString("usuarioActivo"));
        usuarioActivo = "Hola, " + Convert.ToString(Context.Session.GetString("usuarioActivo"));
    }
    bool esUsuario;
    if (usuarioActivo == "Inicia Sesión")
