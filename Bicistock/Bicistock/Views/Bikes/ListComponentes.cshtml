@model Bicistock.Common.Models.InventoryManager;
@{
    Layout = "../Shared/_LayoutNav.cshtml";
    int cont = 1;
    string nameModal = "modal";
    ViewData["Title"] = "Lista Componentes";
}


<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
<meta name="description" content="" />
<meta name="author" content="" />
<!-- Favicon-->
<link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
<!-- Core theme CSS (includes Bootstrap)-->
<link href="css/styles.css" rel="stylesheet" />

<!-- Portfolio Section-->
<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h2 style="padding:5%;" class="page-section-heading text-center text-uppercase text-secondary mb-0">ACCESORIOS</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
            </div>
            <div class="divider-custom-line"></div>
        </div>





        <!-- Portfolio Grid Items-->
        <div class="row justify-content-center">

            @foreach (var item in Model.ComponentList)
            {

                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#@nameModal@cont">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"></div>
                        </div>
                        <h2>@item.Name</h2>
                        <img class="img-fluid" src="@item.Component_Image" />
                    </div>
                </div>


                <div class="portfolio-modal modal fade" id="@nameModal@cont" role="dialog" tabindex="-1" aria-labelledby="Modal+@item.id" aria-hidden="true">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header border-0">
                                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center pb-5">
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <!-- Portfolio Modal - Title-->
                                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.Name</h2>

                                            <!-- Portfolio Modal - Image-->

                                            <img class="d-block w-100" src="@item.Component_Image">


                                            <!-- Portfolio Modal - Text-->
                                            <h3>MARCA: @item.BrandName</h3>
                                            <button class="btn btn-primary" data-bs-dismiss="modal">
                                                <i class="fas fa-xmark fa-fw"></i>Salir
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                cont++;



            }

        </div>
    </div>
</section>

